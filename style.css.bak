*{
margin:0px;
padding:0px;
user-select:none;
}
body{
background-color:#666;
background-image:url(Back.png);
background-size:cover;
background-attachment: fixed;
}
h1,h2{
color:#CCC;
font-family:sans-serif;
font-size:30px;
margin-bottom:25px;
text-shadow:-1px -1px white, 3px 3px black;
text-decoration:underline;
}
#Menu{
overflow:hidden;
height:25px;
width:160px;
margin:0px;
margin-top:0px;
border-radius:0px;
padding:20px;
transition-duration:1s;
}
#Menu:hover{
height:235px;
width:220px;
}
h2{
color:white;
font-size:25px;
text-shadow:none;
margin-top:15px;
text-align:center;
}
div{
background-image:linear-gradient(#555,#444);
box-shadow: 0px 0px 255px black;
border:6px double black;
box-shadow:inset 0px 0px 25px #666;
height:650px;
width:500px;
margin:auto;
margin-top:50px;
border-radius:20px;
}
header{
position:fixed;
width:fit-content;
padding:10px;
transform: translate(-10px,-60px);
}
div div{
background-image:linear-gradient(#444,#555);
box-shadow:inset 0px 0px 25px black;
border:6px double transparent;
height:150px;
width:350px;
margin:auto;
margin-top:50px;
}
#YuID{
font-weight:bold;
text-align:center;
font-family:consolas;
width:150px;
margin-top:50px;
margin-left:100px;
height:46px;
font-size:40px;
border-radius:20px;
box-shadow:inset 0px 0px 15px black;
text-shadow:0px 0px 50px #0D0;
color:green;
background-color:#222;
}
.InputButton,#EraseButton,#AcceptButton{
width:50px;
height:50px;
box-shadow:0px 0px 5px black;
border:6px double #444;
}
#TopLeft{
border-radius:25px 0px 0px 0px;
}
#TopRight{
border-radius:0px 25px 0px 0px;
}
#BotLeft{
border-radius:0px 0px 0px 25px;
}
#BotRight{
border-radius:0px 0px 25px 0px;
}
#MidMid{
border-radius:15px;
}
#TopMid,#MidLeft,#MidRight,#BotMid{
border-radius:0px;
}
.InputButtonRow{
width:225px;
height:0px;
border:none;
margin-top:75px;
display:flex;
}
.InputButton h3{
color:white;
text-shadow:2px 2px black;
}
.InputButton:hover{
background-image:linear-gradient(#777,#666);
border-color:#777;
box-shadow:0px 0px 2px white;
}
.InputButton:active{
background-color:#999;
border-color:#888;
}
h3{
font-size:46px;
font-family:consolas;
width:fit-content;
margin:auto;
color:#BBB;
font-weight:bold;
opacity:30%;
text-shadow:-1px -1px white,3px 3px black;
}
#EraseButton,#AcceptButton{
height:50px;
width:100px;
margin-left:5px;
margin-right:5px;
}
#EraseButton{
background-image:linear-gradient(#422,#211);
border-color:#311;
}
#EraseButton:hover{
background-color:#633;
border-color:#522;
}
#EraseButton:active{
background-color:#944;
border-color:#844;
}
#AcceptButton{
border-color:#131;
background-image:linear-gradient(#242,#121);
}
#AcceptButton:hover{
background-color:#363;
border-color:#252;
}
#AcceptButton:active{
background-color:#494;
border-color:#484;
}
.wideDiv{
	width:1500px;
}
img{
	margin:20px;
	width:256px;
	float:right;
	border:5px solid black;
	border-radius:20px;
}
.BigPic{
	width:960px;
	height:540px;
	display:inline;
}
.description,.written{
	font-size:30px;
	margin:20px;
	color:gray;
	font-family:consolas;
	text-shadow:2px 2px black;
}
.written{
	font-family:fox in the snow;
	color:black;
	text-shadow:none;
	font-weight:bold;
	letter-spacing:-2px;
	line-height:5px;
}